{
  "name": "Customer",
  "plural": "customers",
  "base": "BaseModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "Computed": {
      "properties": {
        "fullAddress": "showFullAddress",
        "name": "showFullName",
        "accountInfo": "showAccountInfo",
        "deals": "showAllDeal"
      }
    },
    "DeleteHistory": true
  },
  "scope": {
    "include": [
      "category",
      "notes",
      "events"
    ]
  },
  "properties": {
    "isActive": {
      "type": "boolean",
      "default": true
    }
  },
  "validations": [],
  "relations": {
    "contact": {
      "type": "embedsOne",
      "model": "BaseContact",
      "options": {
        "validate": true,
        "forceId": false
      }
    },
    "category": {
      "type": "belongsTo",
      "model": "CustomerCategory",
      "foreignKey": "",
      "options": {
        "nestRemoting": true
      }
    },
    "account": {
      "type": "belongsTo",
      "model": "Account",
      "foreignKey": "",
      "options": {
        "nestRemoting": false
      }
    },
    "notes": {
      "type": "hasMany",
      "model": "Note",
      "polymorphic": "noteable"
    },
    "events": {
      "type": "hasMany",
      "model": "Event",
      "polymorphic": "eventable"
    }
  },
  "acls": [],
  "methods": {}
}