{
  "name": "Event",
  "plural": "events",
  "base": "BaseModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "strictObjectIDCoercion": true
  },
  "scope": {
    "order": "createdAt DESC",
    "include": [
      "participants"
    ]
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "start": {
      "type": "date",
      "required": true
    },
    "end": {
      "type": "date",
      "required": true
    },
    "desc": {
      "type": "string",
      "required": false
    },
    "location": {
      "type": "string"
    },
    "labelColor": {
      "type": "string"
    },
    "allDay": {
      "type": "boolean",
      "default": false
    },
    "isRecurring": {
      "type": "boolean",
      "default": false
    },
    "recurrence": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "eventable": {
      "type": "belongsTo",
      "polymorphic": true
    },
    "reminders": {
      "type": "hasMany",
      "model": "Reminder",
      "foreignKey": "reminderId"
    },
    "participants": {
      "type": "hasMany",
      "model": "EventParticipant"
    }
  },
  "acls": [],
  "methods": {}
}
